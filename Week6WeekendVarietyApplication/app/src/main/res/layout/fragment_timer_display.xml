<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.TimerDisplayFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.week6weekendvarietyapplication.viewmodel.TimerViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etTimerDuration"
            android:hint="@string/timer_duration_hint"
            android:textAlignment="center"
            android:text="@string/default_timer_duration"
            android:inputType="number"
            android:afterTextChanged="@{(editable)->viewModel.durationChange(editable)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTimerDisplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@{viewModel.timerCount}"
            android:textSize="48sp"/>

    </FrameLayout>

</layout>